<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="18dp"
    android:layout_marginEnd="18dp"
    android:background="@drawable/city_card_bg"
    android:layout_marginBottom="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/cityNameContainerRL"
        android:layout_alignParentTop="true">

        <ImageButton
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/expandCityCardIB"
            android:layout_centerVertical="true"
            android:layout_marginTop="15dp"
            android:background="@drawable/forward_arrow"
            android:layout_marginStart="10dp">
        </ImageButton>

        <TextView
            android:id="@+id/cityNameTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"
            android:ellipsize="end"
            android:fontFamily="@font/roboto"
            android:gravity="center"
            android:maxLength="255"
            android:maxLines="1"
            android:padding="5dp"
            android:text="NAME OF CITY"
            android:textColor="#f5f5f5"
            android:textSize="25dp">
        </TextView>

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/universitiesContainerLL"
        android:orientation="vertical"
        android:layout_below="@id/cityNameContainerRL"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:visibility="gone"
        android:layout_marginBottom="10dp">

    </LinearLayout>

</RelativeLayout>